{
  "private": true,
  "scripts": {
    "script": "ts-node scripts",
    "create-funds": "ts-node scripts/create-funds",
    "precodegen": "rimraf src/generated && yarn script template --deployment https://testnet.avantgarde.finance/graphql",
    "precodegen:local": "rimraf src/generated && yarn script template --deployment http://localhost:4000/graphql",
    "codegen": "graph codegen subgraph.yaml --output-dir src/generated",
    "codegen:local": "graph codegen subgraph.yaml --output-dir src/generated",
    "postcodegen": "yarn script flatten",
    "postcodegen:local": "yarn script flatten",
    "premake": "yarn script template --deployment https://testnet.avantgarde.finance/graphql",
    "premake:local": "yarn script template --deployment http://localhost:4000/graphql",
    "make": "graph create melonproject/melon --node https://api.thegraph.testnet.avantgarde.finance",
    "make:local": "graph create melonproject/melon --node http://localhost:8020",
    "predeploy": "yarn make || true",
    "predeploy:local": "yarn make:local || true",
    "deploy": "graph deploy melonproject/melon subgraph.yaml --ipfs https://ipfs.avantgarde.finance --node https://api.thegraph.testnet.avantgarde.finance",
    "deploy:local": "graph deploy melonproject/melon subgraph.yaml --ipfs  http://localhost:5001 --node http://localhost:8020",
    "format": "prettier --write {src,scripts}/{*,**/*}.{ts,json,yaml}",
    "test": "jest",
    "lint": "yarn prettier --list-different {src,scripts}/{*,**/*}.{ts,json,yaml}"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.0.11",
    "@crestproject/crestproject": "^0.1.19",
    "@crestproject/jest": "^0.1.19",
    "@graphprotocol/graph-cli": "^0.19.0",
    "@graphprotocol/graph-ts": "^0.19.0",
    "@melonproject/protocol": "^2.0.0-dev.5016+e26adfb6",
    "@melonproject/testutils": "^2.0.0-dev.5016+e26adfb6",
    "@types/jest": "^26.0.15",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.14.7",
    "@types/prettier": "^2.1.5",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^15.0.9",
    "assemblyscript": "^0.17.2",
    "axios": "^0.21.0",
    "ethers": "^5.0.19",
    "ethers-eip712": "^0.2.0",
    "glob": "^7.1.6",
    "graphql-request": "^3.3.0",
    "handlebars": "^4.7.6",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "yargs": "^16.1.1"
  },
  "jest": {
    "preset": "@crestproject/jest",
    "testTimeout": 300000,
    "testEnvironment": "node"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.2.0"
  }
}
