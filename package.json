{
  "private": true,
  "scripts": {
    "script": "ts-node --project scripts/tsconfig.json scripts",
    "precodegen": "rimraf src/generated",
    "codegen": "graph codegen subgraph.yaml --output-dir src/generated",
    "postcodegen": "yarn script flatten",
    "create": "graph create melonproject/melon --node http://localhost:8020",
    "predeploy": "yarn create || true",
    "deploy": "graph deploy melonproject/melon subgraph.yaml --ipfs http://localhost:5001 --node http://localhost:8020",
    "format": "prettier --write {src,scripts}/{*,**/*}.{ts,json,yaml}",
    "lint": "yarn prettier --list-different {src,scripts}/{*,**/*}.{ts,json,yaml}"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.18.0",
    "@graphprotocol/graph-ts": "^0.18.1",
    "@melonproject/persistent": "^2.0.1-dev.0+ac9b035",
    "@melonproject/release": "^2.0.1-dev.0+ac9b035",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.0.27",
    "@types/prettier": "^2.0.2",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^15.0.5",
    "assemblyscript": "^0.14.8",
    "glob": "^7.1.6",
    "jest": "^26.3.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "yargs": "^15.4.1"
  }
}
